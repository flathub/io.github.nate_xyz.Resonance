{
    "app-id" : "io.github.nate_xyz.Resonance",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "resonance",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=xdg-download:ro",
        "--filesystem=xdg-music:ro",
        "--filesystem=xdg-run/app/com.discordapp.Discord:create",
        "--filesystem=xdg-run/discord-ipc-0",
        "--talk-name=org.freedesktop.portal.OpenURI"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "pypi-dependencies.json",
        {
            "name" : "resonance",
            "buildsystem" : "meson",
            "sources" : [
                "cargo-sources.json",
                {
                    "type" : "shell",
                    "commands" : [
                        "mkdir .cargo",
                        "cp cargo/config .cargo/"
                    ]
                },
                {
                    "type" : "git",
                    "url" : "https://github.com/nate-xyz/resonance",
                    "commit":"901e76f87787c194ef31a9252cee8048f9041510"
                }
            ]
        }
    ]
}
